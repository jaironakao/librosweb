<p id="notice"><%= notice %></p>

<h1>Lista de Personas Pendejas</h1>

<table class="table" >
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Pais</th>
      <th>Sexo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.age %></td>
        <td><%= person.country.namec %></td>
        <td><%= person.sex %></td>
        <td><%= link_to '', person, class:'fa fa-search fa-2x' %></td>
        <td><%= link_to '', edit_person_path(person) ,class:'fa fa-pencil-square-o fa-2x' %></td>
        <td><%= link_to '', person, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-trash fa-2x' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Pendejo', new_person_path, class:"btn btn-default btn-lg" %>
