<p id="notice"><%= notice %></p>

<p >
  <strong>Name:</strong>
  <%= @person.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @person.age %>
</p>

<p>
  <strong>Pais:</strong>
  <%= @person.country.namec %>
</p>

<p>
  <strong>Sexo:</strong>
  <%= @person.sex %>
</p>

<%= link_to 'Editar', edit_person_path(@person) , class:"btn btn-warning btn-lg" %> |
<%= link_to 'Atraz', people_path, class:"btn btn-success btn-lg" %>


<h2>Comentarios</h2>
<% @person.comments.each do |comment|+1 %>
  <p>
    <strong>Comentador:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comentario:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Anade Tu Comentario:</h2>
<%= form_for([@person, @person.comments.build]) do |f| %>
  <p>
    <%= f.label :Comentador %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :Cuerpo %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Atras', person_path %>
| <%= link_to 'Editar', edit_person_path(@person) %>





